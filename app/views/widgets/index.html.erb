<h2>Widgets</h2>

<div class="row">
  <div class="span2">
    <%= link_to 'New Widget', new_widget_path, :class => "btn" %>
  </div>
  <div class="span5 offset5">
    <form action="/widgets/filter" class=" form-search">
      <input type="text" id="size" name="size" class="input-medium search-query">
      <button type="submit" class="btn">Search</button>
      <%= link_to "Reset", {:controller => "widgets", :action => "index"}, :class => "btn" %>
    </form>
  </div>
</div>




<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Color</th>
    <th>Size</th>
    <th>Box</th>
    <th>Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><%= widget.name %></td>
    <td><%= widget.description %></td>
    <td><%= widget.color %></td>
    <td><%= widget.size %></td>
    <td>
      <%#= widget.box ? widget.box.material : "None" %>
      <% if widget.box %>
          <%= widget.box.material %>
      <% else %>
          None
      <% end %>
    </td>
    <td>
      <%= "#{my_date(widget.created_at)}" %>
    </td>
    <td>
      <%= link_to 'Show', widget_path(widget), :class => "btn btn-primary" %>
    </td>
    <td>
      <%#= link_to 'Edit', edit_widget_path(widget) %>
      <%= link_to 'Edit', edit_widget_path(widget), :class => "btn btn-success" %>
    </td>
    <td>
      <%= link_to 'Destroy', widget, confirm: 'Are you sure?', method: :delete %>
      <%#= link_to widget_path(widget), :class => "btn btn-danger" do %>
        <!-- <i class="icon-trash icon-white"></i> Delete -->
      <%# end %>
    </td>
  </tr>
<% end %>
</table>

<br />


