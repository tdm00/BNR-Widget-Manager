<h1>Orders</h1>

<table class="listing">
  <tr>
    <th>Name</th>
    <th>Placed On</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td>
      <%= "#{time_ago_in_words(order.created_at)} ago" %>
    <td>
      <%= link_to 'Show', order %>
    </td>

    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

